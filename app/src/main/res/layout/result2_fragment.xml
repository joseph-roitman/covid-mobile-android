<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resultFragment.ResultFragment">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="The Result"
    android:textAppearance="@style/text_big"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="40dp"
    android:textSize="30sp"
    />
    <TextView
        android:id="@+id/ufine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're fine !"
        android:textAppearance="@style/text_big"
        app:layout_constraintLeft_toLeftOf="@id/illustratio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue practicing\n good hygyene"
        android:textAppearance="@style/text_big"

        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/ufine"
        app:layout_constraintLeft_toLeftOf="@id/illustratio"/>

    <ImageView
        android:id="@+id/illustratio"
        android:layout_width="350dp"
        android:layout_height="436dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/illustration"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Finish"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>